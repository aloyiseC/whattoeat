<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/addmenuToolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorPrimary"
        app:title="添加今天菜单"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/addmenuToolbar"
        android:id="@+id/menuTitle">
        <include layout="@layout/layout_cookmenu"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@+id/menuTitle"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@id/recyclerView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/randomBtn"
        android:textColor="@color/white"
        android:background="@drawable/add_player_btn_bg"
        android:text="随机一荤一素"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/randomBtn"
        android:id="@+id/namesTv"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="44dp"
        android:id="@+id/submitBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"
        android:background="@drawable/add_player_btn_bg"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:text="@string/submit"/>
</androidx.constraintlayout.widget.ConstraintLayout>