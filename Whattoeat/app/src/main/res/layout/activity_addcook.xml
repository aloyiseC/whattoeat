<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/addcookToolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorPrimary"
        app:title="添加菜品">
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_width="100dp"
        android:layout_height="44dp"
        android:text="菜品名称:"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/addcookToolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/name_tv"
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:textSize="17sp"/>E
    <EditText
        android:layout_width="200dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@id/addcookToolbar"
        android:id="@+id/namEt"
        android:background="@color/transparent"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textCursorDrawable="@mipmap/cursor"
        app:layout_constraintStart_toEndOf="@id/name_tv"
        android:layout_marginTop="12dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/color_308ee3_40"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toBottomOf="@id/namEt"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/divider1"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="44dp"
        android:text="菜品类型:"
        android:layout_marginLeft="12dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/role_tv"
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:textSize="17sp"/>
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/typeSp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:spinnerMode="dialog"
        app:layout_constraintTop_toBottomOf="@id/namEt"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/role_tv"
        android:layout_marginRight="12dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/color_308ee3_40"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintTop_toBottomOf="@id/role_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/divider2"/>
    <Button
        android:layout_width="100dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/submitBtn"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:text="提交"
        android:textColor="@color/white"
        android:background="@drawable/add_player_btn_bg"
        />
</androidx.constraintlayout.widget.ConstraintLayout>